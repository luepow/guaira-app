# Test Environment Variables
# Este archivo contiene las variables de entorno para el ambiente de testing

NODE_ENV=test

# Database
DATABASE_URL=postgresql://test:test@localhost:5432/test_db

# Authentication
NEXTAUTH_SECRET=test-secret-key-for-testing-only-do-not-use-in-production
NEXTAUTH_URL=http://localhost:3000

# Encryption (64 caracteres hex para AES-256)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# JWT
JWT_SECRET=test-jwt-secret-for-testing-only

# Email (Mock)
SMTP_HOST=smtp.test.com
SMTP_PORT=587
SMTP_USER=test@test.com
SMTP_PASS=test-password
SMTP_FROM=noreply@test.com

# Stripe (Test Keys)
STRIPE_SECRET_KEY=sk_test_123456789
STRIPE_PUBLISHABLE_KEY=pk_test_123456789
STRIPE_WEBHOOK_SECRET=whsec_test_123456789

# PayPal (Sandbox)
PAYPAL_CLIENT_ID=test_client_id
PAYPAL_CLIENT_SECRET=test_client_secret
PAYPAL_MODE=sandbox

# Application
APP_NAME=Guair.app Test
APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL=error

# Feature Flags (for testing)
ENABLE_PERFORMANCE_TESTS=true
ENABLE_SECURITY_TESTS=true
ENABLE_E2E_TESTS=true
