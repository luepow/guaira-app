# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/guaira_pos_db?schema=public"

# ============================================================================
# NEXTAUTH CONFIGURATION
# ============================================================================
NEXTAUTH_URL="http://localhost:9300"
NEXTAUTH_SECRET="your-super-secret-key-min-32-characters-long"

# ============================================================================
# EMAIL SERVICE CONFIGURATION
# ============================================================================
# Proveedor de email: 'resend', 'sendgrid', o 'console' (dev)
EMAIL_PROVIDER="console"
EMAIL_FROM="noreply@guaira.app"

# Resend API (Recomendado)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxx"

# SendGrid API (Alternativa)
SENDGRID_API_KEY="SG.xxxxxxxxxxxxxxxxxxxx"

# ============================================================================
# STRIPE CONFIGURATION
# ============================================================================
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxx"
STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxx"

# ============================================================================
# PAYPAL CONFIGURATION
# ============================================================================
PAYPAL_CLIENT_ID="xxxxxxxxxxxxxxxxxxxx"
PAYPAL_CLIENT_SECRET="xxxxxxxxxxxxxxxxxxxx"
PAYPAL_MODE="sandbox" # sandbox | live
PAYPAL_WEBHOOK_ID="xxxxxxxxxxxxxxxxxxxx"

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NEXT_PUBLIC_APP_NAME="Guair.app"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_API_URL="http://localhost:9300/api"

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Clave de encriptaci√≥n AES-256 (64 caracteres hexadecimales)
ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# CSRF Protection
CSRF_SECRET="your-csrf-secret-key-min-32-characters"

# ============================================================================
# RATE LIMITING CONFIGURATION (Opcional - usa valores por defecto)
# ============================================================================
# OTP Generation: 5 intentos cada 15 minutos
RATE_LIMIT_OTP_GENERATION_MAX="5"
RATE_LIMIT_OTP_GENERATION_WINDOW="900000"

# OTP Verification: 10 intentos cada 15 minutos
RATE_LIMIT_OTP_VERIFICATION_MAX="10"
RATE_LIMIT_OTP_VERIFICATION_WINDOW="900000"

# Login Attempts: 5 intentos cada 15 minutos
RATE_LIMIT_LOGIN_MAX="5"
RATE_LIMIT_LOGIN_WINDOW="900000"

# API Calls: 100 intentos por minuto
RATE_LIMIT_API_MAX="100"
RATE_LIMIT_API_WINDOW="60000"

# ============================================================================
# LOGGING & MONITORING (Opcional)
# ============================================================================
LOG_LEVEL="info" # debug | info | warn | error
ENABLE_AUDIT_LOGS="true"

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
NODE_ENV="development" # development | production | test
